<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RijksmuseumSearch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Blue_Dress</item>
        <item name="colorPrimaryVariant">@color/Dark_Slate_Grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Crystal_Blue</item>
        <item name="colorSecondaryVariant">@color/Lapis_Blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/Lapis_Blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RijksmuseumSearch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RijksmuseumSearch.YellowAccent">
        <item name="colorAccent">@color/Rubber_Ducky_Yellow</item>
    </style>
</resources>